<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/listOfListsItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <ImageView
        android:id="@+id/listOfListsItemImage"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:padding="2dp"
        android:src="@drawable/list_icon"
        app:tint="@color/red"></ImageView>
    <TextView
        android:id="@+id/listOfListsItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:maxWidth="300dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:paddingLeft="20dp"
        android:text="Список без названия"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/listOfListsItemCounter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:text=""
        android:maxLines="1"
        android:textAlignment="textEnd"
        android:textSize="20dp"
        tools:ignore="RtlCompat"></TextView>
</LinearLayout>
