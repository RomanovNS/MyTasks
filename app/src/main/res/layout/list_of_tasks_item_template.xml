<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_margin="3dp"
    android:background="@drawable/shape_of_task"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/listOfTasksDoneItemImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:padding="2dp"
        android:src="@drawable/circle_icon"
        tools:ignore="MissingConstraints"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"></ImageView>

    <TextView
        android:id="@+id/listOfTasksTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/listOfTasksImportantItemImage"
        android:layout_toEndOf="@+id/listOfTasksDoneItemImage"
        android:fontFamily="sans-serif"
        android:text="Ничегdddddо"
        android:textSize="20dp"></TextView>

    <ImageView
        android:id="@+id/listOfTasksImportantItemImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:src="@drawable/important_icon"
        tools:ignore="MissingConstraints"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"></ImageView>

</RelativeLayout>